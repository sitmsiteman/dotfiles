#!/bin/sh

export tabstop=8
export BROWSER=firefox
export TERM=dumb
export PAGER=nobs

export font=/mnt/font/NotoSansCJKkr-Regular/11a/font

[ -z $(pgrep -f plumber) ] && plumber &
if [ -f $HOME/acme.dump ];
then
	acme -a -b -W 1024x768 -f $font -l $HOME/acme.dump $@
else
	acme -a -b -W 1024x768 -f $font $@
fi
